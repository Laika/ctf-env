{
  "packages": [
    "ansible@latest",
    "vagrant@latest",
    "dprint@latest",
  ],
  "env": {
    "CTFENV_CPUS": "4",
    "CTFENV_MEMORY": "16384",
    "CTFENV_HOSTNAME": "ctf.ctfenv.internal",
    "CTFENV_VAGRANT_BOX": "ubuntu/jammy64",
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
    ],
    "scripts": {
      "format": [
        "yamlfmt .",
        "dprint fmt",
      ],
      "start": [
        "vagrant up",
      ],
      "stop": [
        "vagrant destroy -f",
      ],
    "provision": [
        "./scripts/provision.sh",
    ],
      "ssh": [
        "vagrant ssh",
      ],
    },
  },
}
